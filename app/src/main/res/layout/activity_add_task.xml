<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="localhost.ass_2.AddTask">

    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="7"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="8dp">

            <TextView
                android:id="@+id/unitCodeLabel"
                android:layout_column="0"
                android:layout_columnWeight="1"
                android:layout_gravity="fill_horizontal"
                android:layout_row="0"
                android:text="@string/unit_code_name" />

            <EditText
                android:id="@+id/unitCodeField"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill_horizontal"
                android:layout_row="3" />

            <TextView
                android:id="@+id/titleCodeLabel"
                android:layout_column="0"
                android:layout_row="1"
                android:text="@string/title_name" />

            <EditText
                android:id="@+id/titleCodeField"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill_horizontal"
                android:layout_row="1" />

            <TextView
                android:id="@+id/providerLabel"
                android:layout_column="0"
                android:layout_row="2"
                android:text="@string/provider_name" />

            <EditText
                android:id="@+id/providerField"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_gravity="fill_horizontal"
                android:layout_row="2" />

            <TextView
                android:id="@+id/titleCodeLabel2"
                android:layout_column="0"
                android:layout_row="4"
                android:text="@string/weighting_name" />

            <TextView
                android:id="@+id/titleCodeLabel3"
                android:layout_column="0"
                android:layout_row="5"
                android:text="@string/urgency_name" />

            <TextView
                android:id="@+id/titleCodeLabel4"
                android:layout_column="0"
                android:layout_row="6"
                android:text="@string/importance_name" />

        </GridLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/clearButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Clear" />

            <Button
                android:id="@+id/addButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Add" />
        </LinearLayout>

    </LinearLayout>
</android.support.constraint.ConstraintLayout>
